# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/leaderboard?schema=public"

# Redis Configuration
# Format: redis://HOST:PORT or redis://USER:PASSWORD@HOST:PORT
# REDIS_URL="redis://localhost:6379"


# For redis server
REDIS_HOST =
REDIS_PASSWORD = 
REDIS_PORT =

# JWT Secrets
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-this-in-production"

# Cloudinary Configuration (for image uploads)
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

